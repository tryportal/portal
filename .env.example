# Clerk Authentication
# Get these from https://dashboard.clerk.com → API Keys
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_...
CLERK_SECRET_KEY=sk_test_...

# Convex Backend
# Get these from running `npx convex dev` or Convex Dashboard
CONVEX_DEPLOYMENT=dev:...
NEXT_PUBLIC_CONVEX_URL=https://...

# Clerk JWT Configuration (for Convex Dashboard)
# Get these from Clerk Dashboard → JWT Templates → Create "convex" template
# Set these in Convex Dashboard → Settings → Environment Variables
CLERK_JWT_ISSUER_DOMAIN=https://your-app.clerk.accounts.dev
CLERK_JWKS_URL=https://your-app.clerk.accounts.dev/.well-known/jwks.json

# Inbound.new Email API (for invitation emails)
# Get your API key from https://inbound.new/dashboard
# Set in Convex Dashboard → Settings → Environment Variables
INBOUND_API_KEY=your_api_key_here
INBOUND_DOMAIN=your-verified-domain.com

# App URL (for invitation links)
NEXT_PUBLIC_APP_URL=https://tryportal.app

# PostHog Analytics (optional)
# Get these from https://posthog.com
NEXT_PUBLIC_POSTHOG_KEY=phc_...
NEXT_PUBLIC_POSTHOG_HOST=https://us.i.posthog.com
NEXT_PUBLIC_DATABUDDY_CLIENT_ID=your_client_id